file = {:C$\backslash$:/MyTemp/Mendeley/Rodr\'{\i}guez Garc\'{\i}a/2001/Scientia Potestas Est - Knowledge is Power Francis Bacon to Michel Foucault.pdf:pdf},
journal = {Neohelicon},
number = {1},
pages = {109--121},
title = {{Scientia Potestas Est - Knowledge is Power: Francis Bacon to Michel Foucault}},
url = {http://search.proquest.com/docview/763654288?accountid=11774},
volume = {28},
year = {2001}
}
