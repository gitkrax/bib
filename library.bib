journal = {R and D Management},
number = {3},
pages = {237--250},
title = {{Learning from leading-edge customers at the Sims: Opening up the innovation process using toolkits}},
url = {http://userinnovation.mit.edu/papers/SIMS\_R\&D\_final.pdf},
volume = {36},
year = {2006}
