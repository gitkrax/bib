number = {5},
pages = {336--343},
title = {{More Than a Feeling: Measurement of Sonic User Experience and Psychophysiology in a First-Person Shooter Game}},
url = {http://dx.doi.org/10.1016/j.intcom.2010.04.005},
volume = {22},
year = {2010}
