author = {Sharritt, Matthew J},
keywords = {Affordances,Educational Contexts,Learning games,PLAY,Social,Students,Video Game,cognitive,high school},
pages = {1055},
school = {University of Hawaii at Manoa},
title = {{Students' Use of Social and Cognitive Affordances in Video Game Play within Educational Contexts: Implications for Learning.}},
type = {Dissertation},
volume = {Ph.D.},
year = {2008}
}
