doi = {10.1215/03335372-2006-006},
file = {:C$\backslash$:/MyTemp/Mendeley/Ryan/2006/From Parallel Universes to Possible Worlds Ontological Pluralism in Physics, Narratology, and Narrative.pdf:pdf},
