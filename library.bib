issn = {0942-4962},
journal = {Multimedia Systems},
keywords = {Educational game,Europe 2045,formal schooling,game-based learning,simulation,transfer problem},
pages = {19},
title = {{Implementing digital game-based learning in schools: augmented learning environment of \{$\backslash$textquoteleft\}Europe 2045\{$\backslash$textquoteright\}}},
