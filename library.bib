author = {Ibrahim, Roziana},
keywords = {Design Model,Framework,Game Framework,Gender Inclusivity,Video Game,computer game,game design},
school = {University of Southampton},
title = {{A Conceptual Framework For Gender-Inclusivity}},
type = {Mini Thesis - Mhil to PhD Upgrade},
url = {http://eprints.ecs.soton.ac.uk/21569/},
volume = {PhD in Com},
year = {2009}
}
